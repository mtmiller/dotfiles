# ~/.gnomerc: loaded when starting a GNOME desktop session.

# If not running with an X display, don't do anything.
[ -z "$DISPLAY" ] && return

# Set the preferred window manager for gnome session.
if type compiz > /dev/null 2>&1; then
    WINDOW_MANAGER=compiz
elif type metacity > /dev/null 2>&1; then
    WINDOW_MANAGER=metacity
fi
[ -n "$WINDOW_MANAGER" ] && export WINDOW_MANAGER
